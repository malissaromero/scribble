<h2> <%= @post.title %> <%= link_to "(Edit)", edit_post_path(@post) %> </h2>

<h4> <%= @post.author %> </h4>

<p> <%= @post.content %> </p>

<p> <% @post.comments.each do |comment| %>
    <p> <%= link_to "#{comment.title}", post_comment_path(@post, comment) %> </p>
    <p>  <%= comment.author %> </p>
    <p>  <%= comment.content %> </p>
    <% end %>
</p>
